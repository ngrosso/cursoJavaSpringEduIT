<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
    http://www.springframework.org/schema/beans   
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.springframework.org/schema/context 
    http://www.springframework.org/schema/context/spring-context-3.1.xsd
">
<!-- le indicamos a Spring que escanee todas las anotaciones mediante la etiqueta
	 context :component-scan, aqui solo se indica el package que debe scanear 
	 en busca de java anotations -->
	 <context:component-scan base-package="com.prueba.anotations"></context:component-scan>
	

</beans>